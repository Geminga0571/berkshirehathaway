<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] | Reason To Work</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" />
	<script src="https://kit.fontawesome.com/7dd06296c0.js" crossorigin="anonymous"></script>
</head>
<body>
	<header class="header">
		<div class="logo-box">
			<img src="~/images/bhhc-logo.png" alt="Logo" class="logo">
		</div>
		<div class="text-box">
			<h1 class="heading-primary">
				<span class="heading-primary-main">Reasons</span>
				<span class="heading-primary-sub">to work here</span>
			</h1>
		</div>
	</header>
	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	@*<footer class="border-top footer text-muted">
			<div class="container">
				&copy; 2021 - ReasonToWork - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
			</div>
		</footer>*@
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@RenderSection("Scripts", required: false)
</body>
</html>
